<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="100dp"
    android:layout_marginRight="30dp"
    android:orientation="vertical"
    tools:context=".Vista.VistaMenuAdmin">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Administradores"
        android:textColor="#000000"
        android:textSize="15sp" />

    <SearchView
        android:id="@+id/shAdministradores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spnAdmins"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/btnEliminarAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:backgroundTint="#c76363"
        android:fontFamily="@font/open_sans_bold"
        android:onClick="eliminarAdmin"
        android:text="Quitar Admin"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnNuevoAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:backgroundTint="#c76363"
        android:fontFamily="@font/open_sans_bold"
        android:onClick="irNuevoAdmin"
        android:text="Agregar Admin"
        android:textColor="#ffffff"
        android:textSize="15sp" />
</LinearLayout>